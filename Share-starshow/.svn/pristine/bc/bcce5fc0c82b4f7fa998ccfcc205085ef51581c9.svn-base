        <script>
        $(function(){
        var total;
        $.getJSON(dtUrl,function(data){
          if(data.result=="succ"){
            if(data.info.content.split("###***")[1]==undefined){//判断是否是视频
            var total = data.info.attach.length;
            var zWin = $(window);
            var render = function(){
              var tmpl = '';
              var padding = 2;
              var scrollBarWidth = 0;
              var winWidth = $(window).width();
              var picWidth = Math.floor((winWidth-padding*3-scrollBarWidth)/4);
              for(var i=0;i<data.info.attach.length;i++){
                //console.log("222");
                var p = padding;
                if(i%4==1){
                  p = 0;
                }
                tmpl+='<li data-id="'+i+'" class="animated bounceIn index'+(data.info.attach.length)+' li'+i+'"><img src="'+data.info.attach[i].attach_thumb_url+'"></li>';
              }
              $('#container').html(tmpl);
            }
           render();
        //点击效果
        var cid;
        var wImage = $('#large_img');
        var domImage = wImage[0];

        var loadImg = function(id,callback){

          $('#container').css({height:zWin.height(),'overflow':'hidden'})
          $('#large_container').css({
            width:zWin.width(),
            height:zWin.height()
          }).show();
           var Arr=[];
           var imglen=[];
           var imghe=[];
           var Radiow;
           var Radioh;
           var RadiowArr=[];
           var RadiohArr=[];
          for(var i=0;i<data.info.attach.length;i++){
           var imgsrc =data.info.attach[i].attach_big_url;
           var ImageObj = new Image();
           ImageObj.src = imgsrc;
           imglen.push(ImageObj.width);
           imghe.push(ImageObj.height);
           var Radiow=imglen[i]/imghe[i];
           var Radioh=imghe[i]/imglen[i]
           Arr.push(imgsrc);
           RadiowArr.push(Radiow);
           RadiohArr.push(Radioh);
          }
            ImageObj.onload = (function(ImageObj){
            var winWidth = zWin.width();
            var winHeight = zWin.height();
            var realw = parseInt((winWidth - winHeight*RadiohArr[id])/2);
            var realh = parseInt((winHeight - winWidth*RadiohArr[id])/2);
            wImage.css('width','auto').css('height','auto');
            wImage.css('padding-left','0px').css('padding-top','0px');
            if(RadiohArr[id]>1.2){
               wImage.attr('src',Arr[id]).css('height',winHeight).css('padding-left',realw+'px');;
            }else{ 
               wImage.attr('src',Arr[id]).css('width',winWidth).css('padding-top',realh+'px');
            }
            
            callback&&callback();
          }
          )(ImageObj)
        }
        $('#container').delegate('li','tap',function(){
          var _id = cid = $(this).attr('data-id');
          loadImg(_id);
          document.addEventListener('touchmove', stopPrevent, false);
        });
        function stopPrevent(e) {
            e.preventDefault();
            return false;
        }
     

        $('#large_container').on('tap',function(){
          $('#container').css({height:'auto','overflow':'auto'})
          $('#large_container').hide();
          document.removeEventListener('touchmove',stopPrevent, false);
        });
        $('#large_container').mousedown(function(e){
          e.preventDefault();
        });
           var lock = false;
        var startPosition, endPosition, deltaX, deltaY, moveLength;  
        $("#large_container").bind('touchstart', function(e){  
            var touch = e.touches[0];  
            startPosition = {  
                x: touch.pageX,  
                y: touch.pageY  
            }  
        }) .bind('touchmove', function(e){  
            var touch = e.touches[0];  
            endPosition = {  
                x: touch.pageX,  
                y: touch.pageY  
            };  
  
            deltaX = endPosition.x - startPosition.x;  
            deltaY = endPosition.y - startPosition.y;  
            moveLength = Math.sqrt(Math.pow(Math.abs(deltaX), 2) + Math.pow(Math.abs(deltaY), 2));  
        }).bind('touchend', function(e){  
            if(deltaX < 0) { // 向左划动  
                alert("向左划动");
                 if(lock){
                    return;
                  }
                  cid++;
                  console.log(cid+'======'+data.info.attach.length)
                  lock =true;
                  if(cid<=data.info.attach.length-1){
                  loadImg(cid,function(){
                    domImage.addEventListener('webkitAnimationEnd',function(){
                      wImage.removeClass('animated bounceInRight');
                      domImage.removeEventListener('webkitAnimationEnd');
                      lock = false;
                    },false);
                    wImage.addClass('animated bounceInRight');
                  });

                  }else{
                    cid=data.info.attach.length-1;
                    lock = false;
                  }  
            } else if (deltaX > 0) { // 向右划动  
                alert("向右划动");
                 if(lock){
                    return;
                  }
                  cid--;
                  lock =true;
                  if(cid>=0){
                    loadImg(cid,function(){
                      domImage.addEventListener('webkitAnimationEnd',function(){
                        wImage.removeClass('animated bounceInLeft');
                        domImage.removeEventListener('webkitAnimationEnd');
                        lock = false;
                      },false);
                      wImage.addClass('animated bounceInLeft');
                    });
                  }else{
                    cid = 0;
                    lock = false;
                  }  
            }  
        });  
        // $('#large_container').on('swipeLeft',function(){
        //   document.removeEventListener('touchmove',stopPrevent, false);
         
          
        // });

        // $('#large_container').on('swipeRight',function(){
        //   document.removeEventListener('touchmove',stopPrevent, false);
           
        //   });
      }
    }

    })
 
