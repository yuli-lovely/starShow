html {font-size:12px;width:100%;height:100%;}
body { width:100%; height:100%;padding:0;margin:0;background-color: #f0f0f0; position: relative;font-family:"Microsoft YaHei","微软雅黑",}
ul,li {list-style:none;margin:0;padding:0}
h1,h2,h3,h4,h5,p {margin:0}
img {border:0}
input,img {vertical-align:middle}
a{ text-decoration: none; outline: 0 none;}
.wrap{position: relative;max-width: 640px;margin: auto;background:#f0f0f0; overflow: hidden;}
.top{background: #f5f5f5;padding:12px 0; height: 22px; z-index: 999;display: block;position: relative;top: 0;left: 0;width: 100%;}
.top.fixed{position: fixed;}
.nav{ display: inline-block;margin:0 auto;}
.nav li{ display:inline; font-size: 20px; font-style: italic; margin:0 10px;}
.nav li a{ color: #d2d2d2;text-decoration: none;font-weight: bold;}
.nav li.cur a{ color: #ff7214;}
.swipe {overflow: hidden; visibility: hidden;  position: relative;margin:0 8px;padding-top: 6px;}
.swipeWrap {overflow: hidden; position: relative;}
.swipeWrap>div {float:left;  width:100%; position: relative; overflow: hidden;}
.swipeWrap>div>a{ display: block;width: 100%;height: 100%;vertical-align: middle;overflow: hidden;}
.swipeWrap>div>a>p.swipeWz{ display: block; position: fixed; left: 8px; bottom:10px; overflow: hidden; z-index: 1; color: #fff;}
.swipeWrap>div>a>p.swipeWz span{ display: block;}
.swipeWrap>div>a>p.swipeWz span.swipeType{color: #fff; background: #ff780a; display: inline-block;padding:4px 6px;font-size: 10px;border-radius: 0 10px 0 10px; margin-bottom: 4px;}
.swipeWrap>div>a>p.swipeWz span.swipeTitle{font-size: 14px;}
.swipeWrap>div>img{width:100%; height:100%;position: absolute;left: 0; top: 0}
.swipeNum{max-width: 300px;margin: 6px auto 15px;text-align: center;}
.swipeNum li{display: inline-block;width:4px; height: 4px; border-radius: 50%; background: #ccc; margin: 1px 4px;}
.swipeNum li.cur{background: #929292; width: 6px; height: 6px; margin: 0 4px;}

/*最终页*/
.artWrap{position: relative;max-width: 480px;margin: auto;overflow: hidden;}
.artTop{width:100%; position:relative; min-height:180px;overflow: hidden;}
.artTop:after{content: ""; position: absolute;left:0;top: 0;  background-size: 100%; width: 100%; height: 100%;z-index: 1;}
.artTop>img{ position: absolute;left: 0; top: 0;width: 100%;}
.artTop>span.artCnum{ position: absolute;right: 10px; top: 8px; color: #fff; background: #ff780a; display: none;padding:6px 8px;font-size: 12px; z-index: 1;border-radius: 0 10px 0 10px}
/*.artCon{padding:10px 10px 80px;}*/
.artlx{font-size: 10px; color: #f50000;padding: 10px;}
.artTitle{font-size: 20px; color: #000;padding: 0px 10px 0px 10px;}
.artAuthor{ display: block; padding-left: 58px; padding-top: 4px; position: relative;height: 60px;margin:10px 0 0px; background-color: #f0f0f0; border-top: 1px solid #e9e9e9;}
.artAuthor img{width:45px; height: 45px;border-radius: 50%; position: absolute; left: 10px;top:10px;}
.authorName{font-size: 13px; font-weight: bold; color: #444; display: block;position: relative;top:10px;left: 5px;}
.authorType{font-size: 9px; color: #969696;  display: block;position: relative;top: 15px;left: 5px;padding-bottom: 5px;border-bottom:1px solid #e9e9e9;}
.clickShare{padding: 5px;background: #999;display: inline-block; color: #fff; position: absolute;right: 0;top: 6px;font-size: 12px;}
.arcArea{font-size: 15px; color: #444; line-height: 24px;background-color: #f0f0f0;top: -10px;position: relative;padding: 10px;}
.arcArea img{width: 100%; margin-bottom: 10px;}
/*评论区*/
.comment{width:100%; height: 120px; bottom: 65px;position: fixed;z-index: 998; color: #fff; overflow: hidden;}
.commentScroll{width:100%;margin:0; height: 120px; position: relative;}
.cItem{position: absolute;}
.cItem span{width: 29px; height: 29px; position:absolute; display: block;z-index: 9; left: -20px; top: -5px;}
.cItem span img{width: 25px; height: 25px;border-radius: 50%;border: 2px solid #fff;}
.cItem p{display: block; background-color: rgba(37,37,37,0.9); font-size: 12px; border-radius:5px; padding: 2px 10px 2px 15px;white-space:nowrap;} 
.comHandle{position: fixed;right:0;bottom:73px;font-size: 12px; height:12px; line-height:12px; padding:4px 10px; color: #fff; background: #f60; display: block; z-index: 1000;text-decoration: none; border-radius: 10px; display: none;}
/*页尾条*/
.bottom{position:fixed;bottom:0;background-color:rgba(37,37,37,.95);height:73px;width:100%;overflow:hidden}.bottom .left{background:url(../public/images/qsbg.png) 0 0 no-repeat;background-size:100%;width:150px;height:60px;position:relative;float:left;top:7px;left:10px}.bottom .right{background:url(../public/images/iphonedl.png) 0 0 no-repeat;background-size:100%;width:100px;height:35px;position:relative;float:right;top:20px;right:10px}
